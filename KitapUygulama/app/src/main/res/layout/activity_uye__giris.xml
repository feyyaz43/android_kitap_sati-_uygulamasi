<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kitapuygulama.Uye_Giris"
    android:background="#E0E0E0">

    <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

    <RelativeLayout
        android:id="@+id/layout1giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/app_bar"
        android:background="@android:color/white"
        android:padding="10dp">

        <EditText
            android:id="@+id/girisMail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            style="@style/EdittextStyle"/>

        <EditText
            android:id="@+id/girisSifre"
            android:hint="Şifre"
            android:layout_below="@+id/girisMail"
            android:inputType="textPassword"
            android:maxLength="20"
            style="@style/EdittextStyle"/>

        <Button
            android:id="@+id/girisButon"
            android:text="Giriş Yap"
            style="@style/ButonStyle"
            android:layout_below="@+id/girisSifre"/>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/layout1giris"
        android:background="@android:color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/girisUnuttum"
            android:text="Şifremi Unuttum"
            style="@style/ButonStyle"/>
        <Button
            android:id="@+id/girisUyeol"
            android:text="Üye Ol"
            style="@style/ButonStyle"
            android:layout_below="@+id/girisUnuttum"/>

    </RelativeLayout>


</RelativeLayout>
